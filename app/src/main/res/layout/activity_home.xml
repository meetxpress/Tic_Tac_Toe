<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/SS_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/ic_tictactoe"
        android:foregroundGravity="center_horizontal|center_vertical|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image_view_name"
        android:layout_width="207dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/SS_icon"
        android:background="@drawable/app_name"
        android:foregroundGravity="center_horizontal|center_vertical|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_design"
        android:text="Start Game"
        android:textAllCaps="false"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="32dp"
        android:layout_toStartOf="@+id/btnHowToPlay"
        android:background="@drawable/btn_design"
        android:text="About Us"
        android:textAllCaps="false"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnHowToPlay"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_design"
        android:text="How to Play"
        android:textAllCaps="false"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/socialOne"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/btnAbout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/icon_instagram"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/socialTwo"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/btnAbout"
        android:layout_marginStart="24dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/socialOne"
        android:background="@drawable/icon_github"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/socialThree"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_below="@+id/btnAbout"
        android:layout_marginStart="24dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@+id/socialTwo"
        android:background="@drawable/icon_website"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/socialOne"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/btn_exit"
        android:textColor="#FFFFFF"
        android:text="Exit"
        android:textAllCaps="false"
        android:textSize="28dp"
        android:textStyle="bold" />

</RelativeLayout>